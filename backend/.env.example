/**
 * ENVIRONMENT CONFIGURATION FILE
 * 
 * Create a .env file in the backend folder with these values
 * DO NOT commit this file to version control (add to .gitignore)
 */

// ===== DATABASE CONNECTION (MySQL) =====
// MySQL connection details
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=smartserve
DB_PORT=3306

// ===== JWT CONFIGURATION =====
// Secret key for signing JWT tokens (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345

// ===== SERVER CONFIGURATION =====
// Port on which backend runs
PORT=5000

// ===== FRONTEND CONFIGURATION =====
// Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

// ===== NODE ENVIRONMENT =====
// Set to 'development' or 'production'
NODE_ENV=development
